@model PersonalHealthcareManagementSystem.Models.specialist.SpecialistLoginModel


@{
    ViewBag.Title = "Login";
    ViewBag.NavBarId = "Login";
}

    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-5 mx-auto mt-3">
                    <div class="card border-secondary">
                        <div class="card-body">
                            <div class="row">
                                <div class="col text-center">
                                    <img width="120" src="~/Images/doctor (2).png" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col text-center">
                                    <h3>Specialist Login</h3>
                                </div>
                            </div>
                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="col">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 mx-auto">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 mx-auto">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            <p>@Html.ValidationMessage("PasswordMismatch", new { @class = "text-danger" })</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-10 mx-auto">
                                        <div class="form-group">
                                            <input type="submit" value="Login" class="btn btn-secondary btn-block" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.Message
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-3">
            <div class="col text-center">
                @Html.ActionLink("User login", "Login", "User") &nbsp;
                @Html.ActionLink("Admin login", "Login", "Admin")
            </div>
        </div>
    </div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
